#set( $page_title = "Channel Detail" )

<h4>Channel Info</h4>
<dl class="dl-horizontal">
    <dt>Name</dt><dd>$channel.name</dd>
	<dt>Mode</dt><dd>$channel.mode</dd>
	<dt>Creation Timestamp</dt><dd>$channel.createTimestamp</dd>
	<dt>Topic</dt><dd>$channel.topic</dd>
	<dt>Topic Timestamp</dt><dd>$channel.topicTimestamp</dd>
	<dt>Topic Setter</dt><dd>$channel.topicSetter</dd>
</dl>
	
<h4>Modes</h4>
<dl class="dl-horizontal">
	<dt>Moderated</dt><dd>$channel.moderated</dd>
	<dt>No External Messages</dt><dd>$channel.noExternalMessages</dd>
	<dt>Invite Only</dt><dd>$channel.inviteOnly</dd>
	<dt>Secret</dt><dd>$channel.secret</dd>
	<dt>Channel Private</dt><dd>$channel.channelPrivate</dd>
	<dt>Topic Protection</dt><dd>$channel.topicProtection</dd>
	<dt>Channel Limit</dt><dd>$channel.channelLimit</dd>
	<dt>Channel Key</dt><dd>$channel.channelKey</dd>
</dl>

#macro ( displayMode $enabled)
	#if($enabled)
		<td class="success">Yes</td>
	#else
		<td class="error">No</td>
	#end
#end

<h4>Channel Users</h4>
#if($channel.users.isEmpty())
	There are no users
#else
	<table class="table table-striped">
	<thead>
	<tr>
	<th>Nick</th><th>Op</th><th>Voice</th><th>HalfOp</th><th>SuperOp</th><th>Owner</th>
	</thead><tbody>
	#foreach($user in $channel.users)
		<tr>
		<td><a href="userDetail.vm?userId=$user.userId">$user.nick</td>
		#displayMode($channel.isOp($user))
		#displayMode($channel.hasVoice($user))
		#displayMode($channel.isHalfOp($user))
		#displayMode($channel.isSuperOp($user))
		#displayMode($channel.isOwner($user))
		</tr>
	#end
	</tbody>
	</table>
#end