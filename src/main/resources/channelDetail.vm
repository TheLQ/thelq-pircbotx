#set( $page_title = "Channel Detail" )
#set( $serverHostname = $channel.bot.configuration.serverHostname )

<h4>Channel Info</h4>
<dl class="dl-horizontal">
    <dt>Name</dt><dd>$StringUtils.defaultIfBlank($channel.name, "&nbsp;")</dd>
	<dt>Mode</dt><dd>$StringUtils.defaultIfBlank($channel.mode, "&nbsp;")</dd>
	<dt>Creation Timestamp</dt><dd>$date.format('long',$channel.createTimestamp)</dd>
	<dt>Topic</dt><dd>$display.alt($StringUtils.defaultIfBlank, "&nbsp;")</dd>
	<dt>Topic Timestamp</dt><dd>$date.format('long',$channel.topicTimestamp)</dd>
	<dt>Topic Setter</dt><dd>$StringUtils.defaultIfBlank($channel.topicSetter, "&nbsp;")</dd>
</dl>
	
<h4>Modes</h4>
<dl class="dl-horizontal">
	<dt>Moderated</dt><dd>$channel.moderated</dd>
	<dt>No External Messages</dt><dd>$channel.noExternalMessages</dd>
	<dt>Invite Only</dt><dd>$channel.inviteOnly</dd>
	<dt>Secret</dt><dd>$channel.secret</dd>
	<dt>Channel Private</dt><dd>$channel.channelPrivate</dd>
	<dt>Topic Protection</dt><dd>$channel.hasTopicProtection()</dd>
	<dt>Channel Limit</dt><dd>$channel.channelLimit</dd>
	<dt>Channel Key</dt><dd>$StringUtils.defaultIfBlank($channel.channelKey, "&nbsp;")</dd>
</dl>

<h4>Channel Users</h4>
#if($channel.users.isEmpty())
	There are no users
#else
	<table class="table table-striped">
	<thead>
		<tr>
		<th data-sort="string">Nick</th>
		<th data-sort="string">Op</th>
		<th data-sort="string">Voice</th>
		<th data-sort="string">HalfOp</th>
		<th data-sort="string">SuperOp</th>
		<th data-sort="string">Owner</th>
		</tr>
	</thead><tbody>
	#foreach($user in $channel.users)
		<tr>
		<td><a href="userDetail.vm?userId=$user.userId">$user.nick</td>
		#createCell($channel.isOp($user))
		#createCell($channel.hasVoice($user))
		#createCell($channel.isHalfOp($user))
		#createCell($channel.isSuperOp($user))
		#createCell($channel.isOwner($user))
		</tr>
	#end
	</tbody>
	</table>
#end

<h4>Recent History</h4>
<table class="table table-condensed">
<thead>
<tr>
<th>Time</th>
<th>User</th>
<th>Message</th>
</tr>
</thead>
<tbody>
#foreach($curEvent in $manager.getStats($channel.bot.botId).history)
	##Skip mode notifications
	#if($curEvent.channel == $channel && ($curEvent.class.simpleName != "ModeEvent" || $curEvent.user))
		<tr>
		<td style="white-space:nowrap;">$date.format('yyyy-M-d H:m:s',$curEvent.timestamp)</td>
		#if($curEvent.class.simpleName == "TopicEvent")
			<td>*</td><td>Topic changed to $curEvent.topic by #printUser($curEvent.user)</td>
		#elseif($curEvent.class.simpleName == "NickChangeEvent")
			<td>*</td><td>User $event.oldNick!$user.login@$user.hostmask changed nick to $event.newNick</td>
		#elseif($curEvent.class.simpleName == "ModeEvent")
			#if($curEvent.user)
				<td>*</td><td>#printUser($curEvent.user) set mode $curEvent.mode</td>
			#end
		#elseif($curEvent.class.simpleName == "KickEvent")
			<td>*</td><td>#printUser($curEvent.source) kicked #printUser($curEvent.recipient): $curEvent.reason</td>
		#elseif($curEvent.class.simpleName == "JoinEvent")
			<td>*</td><td>#printUser($curEvent.user) joined</td>
		#elseif($curEvent.class.simpleName == "PartEvent")
			<td>*</td><td>#printUser($curEvent.user) left</td>
		#elseif($curEvent.class.simpleName == "NoticeEvent")
			<td><b>$curEvent.user.nick</b></td><td><b>$curEvent.noitce</b></td>
		#elseif($curEvent.class.simpleName == "ActionEvent")
			<td><i>$curEvent.user.nick</i></td><td><i>$curEvent.action</i></td>
		#elseif($curEvent.class.simpleName == "MessageEvent")
			<td><i>$curEvent.user.nick</i></td><td><i>$curEvent.message</i></td>
		#else
			<td>Unknown channel event</td><td>$curEvent</td>
		#end
		</tr>
	#else
		##<td>Unknown event</td><td>$curEvent</td>
	#end
#end
</tbody>
</table>