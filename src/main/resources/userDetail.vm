#set( $page_title = "User Detail" )

<h2>$user.nick</h2>
Login: $user.login
<br>Hostmask: $user.nick
<br>Away: $user.away
<br>Real name: $user.realName
<br>Connected Server: $user.server
<br>Hops: $user.hops

<h4>User's Channels</h4>
#if($user.channels.isEmpty())
	There are no channels
#else
	<table class="table table-striped">
	<thead>
	<tr>
	<th>Channel</th><th>Op</th><th>Voice</th><th>HalfOp</th><th>SuperOp</th><th>Owner</th>
	</thead><tbody>
	#foreach($channel in $user.channels)
		<tr>
		<td><a href="userDetail.vm?userId=$user.userId">$channel.name</td>
		#createCell($channel.isOp($user))
		#createCell($channel.hasVoice($user))
		#createCell($channel.isHalfOp($user))
		#createCell($channel.isSuperOp($user))
		#createCell($channel.isOwner($user))
		</tr>
	#end
	</tbody>
	</table>
#end